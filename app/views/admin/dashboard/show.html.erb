<h1 class="text-3xl font-bold text-gray-800 mb-8">Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <%# Card 1: Utilizadores %>
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-lg font-semibold text-gray-600">Total de Utilizadores</h2>
    <p class="text-3xl font-bold text-blue-600 mt-2"><%= @user_count %></p>
  </div>

  <%# Card 2: Desafios %>
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-lg font-semibold text-gray-600">Total de Desafios</h2>
    <p class="text-3xl font-bold text-green-600 mt-2"><%= @challenge_count %></p>
  </div>

  <%# Card 3: Outra métrica (exemplo) %>
  <div class="bg-white p-6 rounded-lg shadow">
    <h2 class="text-lg font-semibold text-gray-600">Anotações Criadas</h2>
    <p class="text-3xl font-bold text-amber-600 mt-2"><%= Note.count %></p>
  </div>
</div>