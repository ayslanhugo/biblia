<%# app/views/admin/users/index.html.erb %>

<h1 class="text-3xl font-bold text-gray-800 mb-8">Utilizadores Registados</h1>

<div class="bg-white shadow-md rounded-lg overflow-hidden">
  <table class="min-w-full leading-normal">
    <thead>
      <tr>
        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Email</th>
        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Admin?</th>
        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Registado em</th>
        <%# --- NOVA COLUNA DE AÇÕES --- %>
        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class="px-5 py-4 border-b border-gray-200 bg-white text-sm"><%= user.email %></td>
          <td class="px-5 py-4 border-b border-gray-200 bg-white text-sm">...</td>
          <td class="px-5 py-4 border-b border-gray-200 bg-white text-sm"><%= user.created_at.strftime("%d/%m/%Y") %></td>
          <%# --- NOVOS BOTÕES DE AÇÃO --- %>
          <td class="px-5 py-4 border-b border-gray-200 bg-white text-sm">
            <%= link_to 'Editar', edit_admin_user_path(user), class: "text-blue-600 hover:underline" %>
            <% if !user.admin? %>
              <%= button_to 'Apagar', admin_user_path(user), method: :delete, data: { turbo_confirm: "Tem a certeza que deseja apagar o utilizador #{user.email}?" }, class: "ml-4 text-red-600 hover:underline" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>