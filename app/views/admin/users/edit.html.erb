<%# app/views/admin/users/edit.html.erb %>

<h1 class="text-3xl font-bold text-gray-800 mb-2">Editar Utilizador</h1>
<p class="text-lg text-gray-600 mb-8"><%= @user.email %></p>

<div class="bg-white p-6 rounded-lg shadow">
  <%= form_with(model: @user, url: admin_user_path(@user), method: :patch) do |form| %>

    <div class="mb-6">
      <div class="flex items-center">
        <%= form.check_box :admin, class: "h-5 w-5 text-blue-600 rounded border-gray-300 focus:ring-blue-500" %>
        <%= form.label :admin, "Tornar Administrador?", class: "ml-3 block text-sm font-medium text-gray-700" %>
      </div>
    </div>

    <div class="flex items-center space-x-4">
      <%= form.submit "Atualizar Utilizador", class: "px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 cursor-pointer" %>
      <%= link_to "Cancelar", admin_users_path, class: "text-gray-600 hover:underline" %>
    </div>

  <% end %>
</div>