<%= content_tag :div, id: dom_id(note), class: "existing-note p-3 bg-amber-50 dark:bg-gray-800 border-l-4 border-amber-400 dark:border-amber-600 rounded-r-md" do %>
  <p class="font-bold text-sm text-amber-800 dark:text-amber-300">Sua Anotação:</p>
  <p class="text-amber-900 dark:text-amber-100 italic py-1">"<%= note.content %>"</p>
  <div class="note-actions mt-2 text-xs space-x-2">
    <button type="button" 
            @click.prevent="editNoteUrl = '<%= edit_note_path(note) %>'; isEditModalOpen = true" 
            class="inline font-medium text-blue-600 hover:underline dark:text-blue-400 dark:hover:text-blue-300 bg-transparent border-none p-0 cursor-pointer">
      Editar
    </button>
    <span>|</span>
    <button @click.prevent="noteToDeleteUrl = '<%= note_path(note) %>'; isNoteModalOpen = true" 
            type="button" 
            class="inline font-medium text-red-600 hover:underline dark:text-red-400 dark:hover:text-red-300 bg-transparent border-none p-0 cursor-pointer">
      Apagar
    </button>
  </div>
<% end %>
